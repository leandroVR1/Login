
@model GestionEmpledo.Models.RegistrosEntrada_Salida


<h2>Registro de Entrada y Salida</h2>

<form asp-action="EntradaSalida" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FechaEntrada">Fecha de Entrada</label>
        <input asp-for="FechaEntrada" class="form-control" />
        <span asp-validation-for="FechaEntrada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaSalida">Fecha de Salida</label>
        <input asp-for="FechaSalida" class="form-control" />
        <span asp-validation-for="FechaSalida" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
